<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.skedily.model.Task" />

        <variable
            name="vm"
            type="com.skedily.screens.schedule.ScheduleViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/circle"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/view"
            android:src="@drawable/circle"
            android:visibility='@{item.isSoon ? View.VISIBLE : View.GONE}' />

        <view
            android:id="@+id/view"
            class="android.widget.TextView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:foreground="@color/soonTask"
            android:visibility='@{item.isSoon ? View.VISIBLE : View.GONE}' />

        <TextView
            android:id="@+id/currentDate"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/circle"
            android:gravity="center"
            android:maxLines="2"
            android:paddingRight="8dp"
            android:text='@{item.startTime.toString("dd") + "\n" +item.startTime.toString("EEE")}'
            android:textColor='@{item.isSoon ? @color/soonTask : @color/dateBlack}'
            android:textSize="24sp"
            android:visibility='@{item.firstOfDay ? View.VISIBLE : View.INVISIBLE}'
            tools:text="18 \n Tue" />

        <android.support.v7.widget.CardView xmlns:cardview="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_toEndOf="@+id/currentDate"
            cardview:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/currentDate"
                android:background='@{item.user.color}'
                android:padding="8dp"
                tools:background="#42A5F5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text='@{item.name}'
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        tools:text="Name of name and name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{item.startTime.toString("HH:mm") + " - "  + item.endTime.toString("HH:mm")}'
                        android:textColor="@color/white"
                        tools:text="7 - 8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawablePadding="4dp"
                        android:onClick="@{() -> vm.onClickLocation(item.address)}"
                        android:text='@{item.address.locality}'
                        android:textColor="@color/white"
                        android:visibility='@{item.address != null ? View.VISIBLE : View.GONE}'
                        tools:text="location" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/userPhoto"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_launcher_background"
                    app:loadCircleIcon='@{item.user.iconUrl}' />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>